{
    "name": "phosphor-compiler",
    "description": "A compiler for the Phosphor programming language.",
    "author": "Benedikt Magnus",
    "version": "0.2.0-dev",
    "license": "MIT",
    "keywords": [
        "Phosphor",
        "compiler",
        "language"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/PhosphorLang/Compiler"
    },
    "bugs": {
        "url": "https://github.com/PhosphorLang/Compiler/issues"
    },
    "bin": {
        "phc": "./bin/main.js"
    },
    "engines": {
        "node": "12.16.3"
    },
    "dependencies": {
        "chalk": "4.0.0"
    },
    "devDependencies": {
        "@types/chai": "4.2.11",
        "@types/mocha": "7.0.2",
        "@types/node": "12.12.38",
        "@typescript-eslint/eslint-plugin": "2.31.0",
        "@typescript-eslint/parser": "2.31.0",
        "chai": "4.2.0",
        "eslint": "6.8.0",
        "mocha": "7.1.2",
        "nyc": "15.0.1",
        "ts-node": "8.10.1",
        "typescript": "3.8.3"
    },
    "files": [
        "bin",
        "LICENSE",
        "README.md"
    ],
    "main": "bin/main.js",
    "scripts": {
        "build": "npx tsc",
        "clean": "rm -r bin && rm -r tmp && rm -r coverage",
        "coverage": "npx nyc npm run test",
        "coverage:coveralls": "npx nyc --reporter=lcov npm run test",
        "coverage:text": "npx nyc --reporter=text npm run test",
        "lint": "npx eslint src/**/*.ts",
        "prepack": "npm run clean && npx tsc -p tsconfig.release.json",
        "start": "node bin/main.js",
        "test": "npx mocha -r ts-node/register 'tests/**/*.ts'"
    },
    "private": true
}
